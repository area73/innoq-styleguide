{
  "pkgFiles": ["package.json"],
  "increment": "patch",
  "changelogCommand": "git log --pretty=format:\"* %s (%h)\" [REV_RANGE]",
  "requireCleanWorkingDir": false,
  "buildCommand": "zip -r dist/innoq-styleguide-${src.tagName}.zip dist/* -x dist/site -x dist/css/.gitkeep",
  "src": {
    "beforeReleaseCommand": "echo 'oi!' %s",
    "commit": true,
    "commitMessage": "v%s",
    "tag": true,
    "tagName": "%s",
    "tagAnnotation": "v%s",
    "push": true
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "v%s",
    "tokenRef": "INNOQ_STYLEGUIDE_GITHUB_TOKEN",
    "assets": "dist/*.zip"
  },
  "prompt": {
    "src": {
      "status": true,
      "commit": true,
      "tag": true,
      "push": true,
      "release": true,
      "publish": false
    }
  }
}
