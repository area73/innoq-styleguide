{
  "pkgFiles": ["package.json"],
  "increment": "patch",
  "changelogCommand": "git log --pretty=format:\"* %s (%h)\" [REV_RANGE]",
  "requireCleanWorkingDir": false,
  "src": {
    "afterStageCommand": "zip -r innoq-styleguide-v%s.zip dist/* -x dist/site",
    "commit": true,
    "commitMessage": "v%s",
    "tag": true,
    "tagName": "%s",
    "tagAnnotation": "v%s",
    "push": true
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "tokenRef": "INNOQ_STYLEGUIDE_GITHUB_TOKEN",
    "assets": "dist/*.zip"
  },
  "prompt": {
    "src": {
      "release": false
    }
  }
}
